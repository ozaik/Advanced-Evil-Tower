# Local dev domain
DOMAIN=localhost
BASE_URL=http://localhost

# Secrets (dev-safe; change if you expose beyond localhost)
COOKIE_SECRET=dev_cookie_secret_change_me
JWT_SECRET=dev_jwt_secret_change_me
EXCHANGE_SHARED_SECRET=dev_exchange_secret_change_me

# Access mode:
# token = signed iframe token (recommended)
# public = no auth (dangerous even on LAN)
ACCESS_MODE=token

# Only allow embedding from localhost
FRAME_ANCESTORS=http://localhost

# Google start page (+ allow redirect hostnames)
DEFAULT_ALLOWLIST_HOSTS=google.com,www.google.com,google.ch,www.google.ch
DEFAULT_START_URL=https://www.google.com

# Session cleanup
SESSION_IDLE_TTL_SECONDS=1800
SESSION_HARD_TTL_SECONDS=0
CLEANUP_INTERVAL_SECONDS=60

# Internal
GATEWAY_INTERNAL_URL=http://gateway:8080
